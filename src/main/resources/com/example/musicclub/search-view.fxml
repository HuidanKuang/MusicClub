         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" layoutX="39.0" layoutY="119.0">
         <children>
            <ListView prefHeight="200.0" prefWidth="330.0" />
